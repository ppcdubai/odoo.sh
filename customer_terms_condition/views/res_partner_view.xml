<?xml version="1.0"?>
<odoo>

    <record id="view_partner_form_extended" model="ir.ui.view">
        <field name="name">view.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='internal_notes']" position="after">
                <page name="sale_order_notes" string="Terms and Conditions">
                    <field name="sale_note" placeholder="Terms and Conditions"/>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
